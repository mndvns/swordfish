
mixin scr(pre, s)
  script(src='js/' + pre + s + '.js')

mixin scr-list(pre, list)
  each l in list
    mixin scr(pre, l)


+scr-list( 'lib/angular/angular', ['', '-ui-states'] )
+scr-list( 'common/', ['filters', 'directives'] )

+scr( 'lib/bootstrap/', 'ui-bootstrap-custom' )
+scr( '', 'app' )
+scr( 'services/', 'services' )
+scr( 'controllers/', 'controllers' )
+scr( 'offer/', 'OfferController' )


