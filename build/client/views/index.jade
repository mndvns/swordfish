extends layout

block navbar
  .navbar: .navbar-inner: .container

    mixin drop(a, b)
      div(class="pull-#{a}")
        a.brand.dropdown-toggle(
          href='#'
          data-toggle='dropdown'
          role='button')= b

    +drop("left", "Swordfish")
    +drop("right", "qwe")

mixin cg(a)
  .control-group
    label.control-label= a
    .controls
      input(type='text',
        ng-model='data.#{a}')

block body

  .container(ng-app='myApp')

    div(ng-controller="AppCtrl")
      +cg('message')
      h1 {{data.message}}
      h1 {{data.message}}

